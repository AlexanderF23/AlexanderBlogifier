{
  "name": "blogifier-themes-standard",
  "version": "1.0.0",
  "description": "only for compiling sass files",
  "author": "Farzin",
  "private": true,
  "scripts": {
    "start": "sass --watch scss:../wwwroot/css --style=compressed",
    "rtl": "rtlcss ../wwwroot/css/styles.css css/styles.rtl.css",
    "build-sass": "sass scss:../wwwroot/css --style=compressed",
    "rollup": "rollup --config",
    "build": "npm run build-sass && npm run rollup"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "bootstrap": "~5.1.0",
    "rollup": "^3.23.1",
    "rtlcss": "^3.3.0",
    "sass": "^1.32.12"
  }
}
