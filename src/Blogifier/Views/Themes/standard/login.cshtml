@model AccountLoginModel
@{
  Layout = "layouts/_base.cshtml";
}
@inject IStringLocalizer<Resource> _localizer

@section HeadMeta{
  <title>Error 404</title>
  <meta name="description" content="Error page">
}

<main class="container">
  @if (Model.ShowError)
  {
    <div class="account-message -error">@_localizer["login-failed"].</div>
  }

  <form method="post" asp-controller="account" asp-action="login">
    <div class="form-floating form-item">
      <input id="loginEmail" type="email" class="form-control" placeholder="@_localizer["email"]" autofocus>
      <label for="loginEmail">@_localizer["email"]</label>
      <span asp-validation-for="Email"></span>
    </div>
    <div class="form-floating form-item">
      <input id="loginPassword" type="password" class="form-control" placeholder="@_localizer["password"]" autofocus>
      <label for="loginPassword">@_localizer["password"]</label>
      <span asp-validation-for="Password"></span>
    </div>
    <button type="submit" class="btn btn-blogifier btn-block btn-floating">@_localizer["login"]</button>
  </form>
</main>
