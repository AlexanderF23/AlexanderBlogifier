@using Blogifier.Shared
@using Blogifier.Shared.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> _localizer
@model MainModel
@{
  @* TODO: Customfield *@
  var siteMark = "titleDesc";
}

<header class="header">
  <div class="container d-md-flex align-items-md-center">
    <section class="header-sign py-4 py-md-0 text-center text-md-start me-md-auto">
      @if (siteMark == "logo")
      {
        <a class="header-logo" href="@Model.AbsoluteUrl">
          <img class="header-logo-img" src="~/@Model.Logo" alt="@Model.Title @_localizer["logo"]">
        </a>
      }
      else if (siteMark == "title")
      {
        <a class="header-title" href="@Model.AbsoluteUrl">@Model.Title</a>
      }
      else if (siteMark == "titleDesc")
      {
        <a class="header-title" href="@Model.AbsoluteUrl">@Model.Title</a>
        <p class="header-desc">@Model.Description</p>
      }
    </section>

    <partial name="../components/nav.cshtml" />
  </div>
</header>
